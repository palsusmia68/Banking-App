            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_height"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:fontFamily="@font/calibri_normal"
                    android:gravity="center"
                    android:text="Account Number"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_view_14" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:background="@drawable/xml_et_bg_border"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/spin_sbAcNo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center|start"
                        android:textAlignment="textStart"
                        android:textSize="@dimen/text_view_12" />

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:padding="2dp"
                android:gravity="center"
                android:weightSum="3"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_show"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/xml_back_btn"
                    android:fontFamily="@font/calibri_bold"
                    android:text="Show"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_view_14" />

                <Button
                    android:id="@+id/btn_download"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/xml_back_btn"
                    android:fontFamily="@font/calibri_bold"
                    android:text="Download"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_view_14" />

                <Button
                    android:id="@+id/btn_share"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/xml_back_btn"
                    android:fontFamily="@font/calibri_bold"
                    android:text="Share"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_view_14" />

            </LinearLayout>



            <RelativeLayout
                android:id="@+id/rl_last_10_trans"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:gravity="center">

                <LinearLayout
                    android:id="@+id/li_trans_header"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:visibility="gone"
                    android:layout_marginTop="1dp"
                    android:background="@color/colorLighterGrey"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="6">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/xml_red_box"
                        android:fontFamily="@font/calibri_bold"
                        android:gravity="center"
                        android:text="Row No"
                        android:visibility="gone"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_view_12" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="1dp"
                        android:layout_weight="1"
                        android:background="@drawable/xml_red_box"
                        android:fontFamily="@font/calibri_bold"
                        android:gravity="center"
                        android:text="Date"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_view_12" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="1dp"
                        android:layout_weight="1"
                        android:background="@drawable/xml_red_box"
                        android:fontFamily="@font/calibri_bold"
                        android:gravity="center"
                        android:text="Tran No"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_view_12" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="1dp"
                        android:visibility="gone"
                        android:layout_weight="1"
                        android:background="@drawable/xml_red_box"
                        android:fontFamily="@font/calibri_bold"
                        android:gravity="center"
                        android:text="Purpose"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_view_12" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="1dp"
                        android:layout_weight="1"
                        android:background="@drawable/xml_red_box"
                        android:fontFamily="@font/calibri_bold"
                        android:gravity="center"
                        android:text="Narration"
                        android:visibility="gone"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_view_12" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="1dp"
                        android:layout_weight="1"
                        android:background="@drawable/xml_red_box"
                        android:fontFamily="@font/calibri_bold"
                        android:gravity="center"
                        android:text="Deposit"
                        android:visibility="visible"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_view_12" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="1dp"
                        android:layout_weight="1.1"
                        android:background="@drawable/xml_red_box"
                        android:fontFamily="@font/calibri_bold"
                        android:gravity="center"
                        android:text="Withdrawal"
                        android:visibility="visible"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_view_12" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="1dp"
                        android:layout_weight="1"
                        android:background="@drawable/xml_red_box"
                        android:fontFamily="@font/calibri_bold"
                        android:gravity="center"
                        android:text="Balance"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_view_12" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="1dp"
                        android:layout_weight="1"
                        android:background="@drawable/xml_red_box"
                        android:fontFamily="@font/calibri_bold"
                        android:gravity="center"
                        android:text="Show"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_view_12" />

