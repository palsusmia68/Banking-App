<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/xml_dialog_border"
        android:gravity="center">

        <RelativeLayout
            android:id="@+id/li_paid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/li_dialog_header"
            android:background="@drawable/xml_dialog_middle_bg"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_paid"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/colorPrimary"
                android:fontFamily="@font/calibri_bold"
                android:gravity="center"
                android:text="EMI BreakUp"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_view_16" />

            <LinearLayout
                android:id="@+id/li_header"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/text_paid"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="2dp"
                android:orientation="horizontal"
                android:weightSum="7">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:text="Loan ID"
                    android:textColor="@color/colorWhite"
                    android:textSize="10sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:text="Emi NO"
                    android:textColor="@color/colorWhite"
                    android:textSize="10sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="0.7"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:text="EMI"
                    android:textColor="@color/colorWhite"
                    android:textSize="10sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:text="Due Date"
                    android:textColor="@color/colorWhite"
                    android:textSize="10sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:text="Interest"
                    android:textColor="@color/colorWhite"
                    android:textSize="10sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:text="Principle"
                    android:textColor="@color/colorWhite"
                    android:textSize="10sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="1.3"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:text="Current Balance"
                    android:textColor="@color/colorWhite"
                    android:textSize="10sp" />

            </LinearLayout>

            <ListView
                android:id="@+id/listBreak"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/btn_emi_break_ok"
                android:layout_below="@+id/li_header">

            </ListView>

            <Button
                android:id="@+id/btn_emi_break_ok"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_margin="5dp"
                android:background="@drawable/xml_back_btn"
                android:fontFamily="@font/calibri_bold"
                android:gravity="center"
                android:inputType="text"
                android:text="OK"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_view_18" />

        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>