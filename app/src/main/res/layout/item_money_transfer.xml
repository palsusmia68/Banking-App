<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_margin="2dp"
        android:background="@drawable/xml_solid_money_btn">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/bill_image"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:src="@drawable/account_fund_transfer" />

            <TextView
                android:padding="2dp"
                android:id="@+id/bill_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:fontFamily="@font/calibri_bold"
                android:gravity="center"
                android:text="Money Tranfer Adaptrhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhh"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_view_15" />

        </LinearLayout>


    </RelativeLayout>


</com.google.android.material.card.MaterialCardView>