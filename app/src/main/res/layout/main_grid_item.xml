<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    app:cardCornerRadius="6dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="2dp"
        android:background="@drawable/xml_solid_money_btn">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/item_image_main"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/new_member_request" />

            <TextView
                android:id="@+id/item_txt_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BillPay/Recharge"
                android:textSize="@dimen/text_view_13"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/calibri_bold" />

        </LinearLayout>


    </RelativeLayout>

</androidx.cardview.widget.CardView>