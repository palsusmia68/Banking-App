<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="2dp"
            android:background="@color/colorWhite"
            android:orientation="horizontal"
            android:weightSum="5">

            <TextView
                android:id="@+id/txt_policyno"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorWhite"
                android:fontFamily="@font/calibri_normal"
                android:gravity="center"
                android:text="InstNo"
                android:textColor="@color/colorBlack" />


            <TextView
                android:id="@+id/txt_payDate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:background="@color/colorWhite"
                android:fontFamily="@font/calibri_normal"
                android:gravity="center"
                android:text="Pay date"
                android:textColor="@color/colorBlack" />

            <TextView
                android:id="@+id/txt_amount"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:background="@color/colorWhite"
                android:fontFamily="@font/calibri_normal"
                android:gravity="center"
                android:text="Amount"
                android:textColor="@color/colorBlack" />

            <TextView
                android:id="@+id/txt_matAmount"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:background="@color/colorWhite"
                android:fontFamily="@font/calibri_normal"
                android:gravity="center"
                android:text="Mat Amount"
                android:textColor="@color/colorBlack" />

            <TextView
                android:id="@+id/txt_matDate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:background="@color/colorWhite"
                android:fontFamily="@font/calibri_normal"
                android:gravity="center"
                android:text="Mat Date"
                android:textColor="@color/colorBlack" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>