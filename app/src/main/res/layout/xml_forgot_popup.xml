<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:padding="25dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_centerInParent="true"
        android:background="@drawable/xml_dialog_border">

        <RelativeLayout
            android:id="@+id/li_dialog_header"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorPrimary">

            <TextView
                android:id="@+id/dialog_txt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/calibri_bold"
                android:gravity="center"
                android:text="FORGOT PASSWORD"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_view_16" />

            <ImageView
                android:id="@+id/pop_img_close"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_close"
                android:layout_marginRight="10dp"
                android:padding="3dp"
                android:layout_alignParentRight="true" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/li_dialog_header"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:padding="20dp"
            android:background="@drawable/xml_dialog_middle_bg">

            <TextView
                android:id="@+id/txt_rtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/calibri_bold"
                android:text="Registered Phone No"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_view_12" />

            <EditText
                android:id="@+id/et_regis_email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:hint="Enter Registered Phone No."
                android:singleLine="true"
                android:inputType="number"
                android:maxLength="10"
                android:fontFamily="@font/calibri_normal"
                android:textColorHint="@color/colorDeepGrey"
                android:textSize="@dimen/text_view_14"
                android:textColor="@color/colorBlack"
                android:gravity="center"
                android:layout_below="@+id/txt_rtitle"
                android:backgroundTint="@color/colorPrimary" />

            <Button
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_below="@+id/et_regis_email"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="SUBMIT"
                android:fontFamily="@font/calibri_bold"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_view_14"
                android:background="@drawable/xml_popupbtn_bg" />

        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>