<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/li_item"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="2dp"
            android:background="@color/colorWhite"
            android:orientation="horizontal"
            android:weightSum="6">

            <TextView
                android:id="@+id/txt_loanid"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorWhite"
                android:fontFamily="@font/calibri_normal"
                android:gravity="center"
                android:text="Loan Id"
                android:textColor="@color/colorBlack" />

            <TextView
                android:id="@+id/txt_emino"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorWhite"
                android:fontFamily="@font/calibri_normal"
                android:gravity="center"
                android:text="EMI No."
                android:textColor="@color/colorBlack" />

            <TextView
                android:id="@+id/txt_date"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:background="@color/colorWhite"
                android:fontFamily="@font/calibri_normal"
                android:gravity="center"
                android:text="Date"
                android:textColor="@color/colorBlack" />

            <TextView
                android:id="@+id/txt_payamount"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:background="@color/colorWhite"
                android:fontFamily="@font/calibri_normal"
                android:gravity="center"
                android:text="Pay Amount"
                android:textColor="@color/colorBlack" />

            <TextView
                android:id="@+id/txt_particulars"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:background="@color/colorWhite"
                android:fontFamily="@font/calibri_normal"
                android:gravity="center"
                android:text="Particulars"
                android:textColor="@color/colorBlack" />

            <TextView
                android:id="@+id/txt_interest"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:background="@color/colorWhite"
                android:fontFamily="@font/calibri_normal"
                android:gravity="center"
                android:text="Interest"
                android:textColor="@color/colorBlack" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>