<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:orientation="vertical"
    android:paddingLeft="5dp"
    android:paddingRight="5dp">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorBlack" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5">

        <TextView
            android:visibility="gone"
            android:id="@+id/item_ac_no"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tv_line_bg"
            android:fontFamily="@font/calibri_normal"
            android:gravity="center"
            android:text="A/C No"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_view_12" />

        <TextView
            android:id="@+id/item_policy_date"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.1"
            android:background="@drawable/tv_line_bg"
            android:fontFamily="@font/calibri_normal"
            android:gravity="center"
            android:text="Date"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_view_12" />

        <TextView
            android:id="@+id/item_paydate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:background="@drawable/tv_line_bg"
            android:fontFamily="@font/calibri_normal"
            android:gravity="center"
            android:text="Tran No"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_view_12" />

        <TextView
            android:id="@+id/item_amount"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.1"
            android:background="@drawable/tv_line_bg"
            android:fontFamily="@font/calibri_normal"
            android:gravity="center"
            android:text="Narration"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_view_12" />

        <TextView
            android:id="@+id/item_maturity_amount"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tv_line_bg"
            android:fontFamily="@font/calibri_normal"
            android:gravity="center"
            android:text="Deposit"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_view_12" />

        <TextView
            android:id="@+id/item_maturity_date"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tv_line_bg"
            android:fontFamily="@font/calibri_normal"
            android:gravity="center"
            android:text="Withdrawal"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_view_12" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorBlack" />


</LinearLayout>
