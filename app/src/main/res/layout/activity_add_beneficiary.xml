<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AddBeneficiaryActivity">

    <RelativeLayout
        android:id="@+id/rl_rd_header"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/login_background">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:padding="8dp"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/calibri_bold"
            android:text="Add Beneficiary"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_view_20" />


    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_rd_header">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp">

            <!--Beneficiary A/c No.-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="2dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:background="@drawable/xml_bgleftradius"
                    android:fontFamily="@font/calibri_bold"
                    android:gravity="center"
                    android:text="Beneficiary A/c No."
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_view_14" />

                <EditText
                    android:id="@+id/edit_bene_acNo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:background="@color/colorWhite"
                    android:fontFamily="@font/calibri_normal"
                    android:gravity="center"
                    android:hint="Enter A/C No"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_view_14" />

            </LinearLayout>

            <!--Confirm Beneficiary A/c No.-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="2dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:background="@drawable/xml_bgleftradius"
                    android:fontFamily="@font/calibri_bold"
                    android:gravity="center"
                    android:text="Confirm A/c No."
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_view_14" />

                <EditText
                    android:id="@+id/edit_confirm_acNo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:background="@color/colorWhite"
                    android:fontFamily="@font/calibri_normal"
                    android:gravity="center"
                    android:hint="Enter A/C No"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_view_14" />

            </LinearLayout>

            <!--Name-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="2dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:background="@drawable/xml_bgleftradius"
                    android:fontFamily="@font/calibri_bold"
                    android:gravity="center"
                    android:text="Name"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_view_14" />

                <EditText
                    android:id="@+id/edit_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:background="@color/colorWhite"
                    android:fontFamily="@font/calibri_normal"
                    android:gravity="center"
                    android:hint="Enter Name"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_view_14" />

            </LinearLayout>

            <!--Limit-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="2dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:background="@drawable/xml_bgleftradius"
                    android:fontFamily="@font/calibri_bold"
                    android:gravity="center"
                    android:text="Limit"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_view_14" />

                <EditText
                    android:id="@+id/edit_limit"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:background="@color/colorWhite"
                    android:fontFamily="@font/calibri_normal"
                    android:gravity="center"
                    android:hint="Enter Limit"
                    android:inputType="number"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_view_14" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_save"
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/xml_back_btn"
                android:text="Save"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>