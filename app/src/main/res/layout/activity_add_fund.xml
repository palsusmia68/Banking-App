<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AddFundActivity">

    <RelativeLayout
        android:id="@+id/rl_add_fund"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/login_background">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:padding="8dp"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/calibri_bold"
            android:text="Add Fund"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_view_20" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_add_fund">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp">

            <!--From Acc-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="2dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:background="@drawable/xml_bgleftradius"
                    android:fontFamily="@font/calibri_bold"
                    android:gravity="center"
                    android:text="From A/c No."
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_view_14" />

                <EditText
                    android:id="@+id/edit_frmAcc"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:background="@color/colorWhite"
                    android:fontFamily="@font/calibri_normal"
                    android:gravity="center"
                    android:hint="Enter Acc No"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_view_14" />

            </LinearLayout>

            <!--Confirm From Acc-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="2dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:background="@drawable/xml_bgleftradius"
                    android:fontFamily="@font/calibri_bold"
                    android:gravity="center"
                    android:text="Confirm From A/c No."
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_view_14" />

                <EditText
                    android:id="@+id/edit_confirm_frmAcc"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:background="@color/colorWhite"
                    android:fontFamily="@font/calibri_normal"
                    android:gravity="center"
                    android:hint="Enter Acc No"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_view_14" />

            </LinearLayout>

            <!--Bank Name-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="2dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:background="@drawable/xml_bgleftradius"
                    android:fontFamily="@font/calibri_bold"
                    android:gravity="center"
                    android:text="Bank Name"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_view_14" />

                <EditText
                    android:id="@+id/edit_bank_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:background="@color/colorWhite"
                    android:fontFamily="@font/calibri_normal"
                    android:gravity="center"
                    android:hint="Enter Bank Name"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_view_14" />

            </LinearLayout>

            <!--Amount-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="2dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:background="@drawable/xml_bgleftradius"
                    android:fontFamily="@font/calibri_bold"
                    android:gravity="center"
                    android:text="Amount"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_view_14" />

                <EditText
                    android:id="@+id/edit_amount"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:background="@color/colorWhite"
                    android:fontFamily="@font/calibri_normal"
                    android:gravity="center"
                    android:inputType="number"
                    android:hint="Enter Amount"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_view_14" />

            </LinearLayout>

            <!--Add to Acc-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="2dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:background="@drawable/xml_bgleftradius"
                    android:fontFamily="@font/calibri_bold"
                    android:gravity="center"
                    android:text="Add To Savings A/c"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_view_14" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:background="@color/colorWhite"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/spin_add_bank_acc"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:textSize="@dimen/text_view_14" />

                </LinearLayout>

            </LinearLayout>

            <!--Balance-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="2dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:background="@drawable/xml_bgleftradius"
                    android:fontFamily="@font/calibri_bold"
                    android:gravity="center"
                    android:text="Current Balance"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_view_14" />

                <TextView
                    android:id="@+id/tv_balance"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:background="@color/colorLighterGrey"
                    android:fontFamily="@font/calibri_normal"
                    android:gravity="center"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_view_14" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_add"
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/xml_back_btn"
                android:text="Add Fund"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>